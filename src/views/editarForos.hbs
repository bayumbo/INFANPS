<form action="/foros/editar/{{foros.id}}" method="POST" >
    <!-- Campo oculto para indicar el método PUT -->
    <input type="hidden" name="_method" value="PUT">
    <h1 class="titulo">Editar Foro</h1>
    <!-- Resto del formulario -->
    <div class="mb-3">
        <label for="titulo" class="form-label">Título:</label>
        <input type="text" name="titulo" value="{{foro.titulo}}" required>
    </div> 
    <div class="mb-3">
        <label for="contenido" class="form-label">Contenido:</label>
       <textarea name="contenido" required>{{foro.contenido}}</textarea>
    </div>
    
    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
</form>





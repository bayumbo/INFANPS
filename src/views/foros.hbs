<form action=""></form>
 <h1 class="titulo">Crear Nueva Actividad</h1>
 <br>

<h2>Crear Nueva Actividad</h2>
<form action="/foros/crear" method="post">
    <label for="titulo">Título de la Actividad:</label>
    <input type="text" id="titulo" name="titulo" required>
    <label for="descripcion">Descripción:</label>
    <textarea id="descripcion" name="descripcion" required></textarea>
    <label for="campoAdicional">Campo Adicional:</label>
    <input type="text" id="campoAdicional" name="campoAdicional" required>
    <input type="hidden" name="id_creador" value="1"> <!-- Agrega el id_creador como un valor constante o dinámico -->
    <div>
    <button type="submit">+ Añadir Actividad </button>
    </div>
</form>
{{#each foros index=index}}
  <div class="seccion seccion{{index}}">
    <div class="contenido">
      <h2>{{titulo}}</h2>
      <p>{{contenido}}</p>
    </div>
    <div class="botones">
    <form action="/foros/editar/{{this.id}}" method="put">
      <button type="submit" id="editar" >Editar</button>
    </form>
    <!-- Formulario para eliminar el foro -->
    <form action="/foros/eliminar/{{id}}" method="DELETE" onsubmit="return confirm('¿Estás seguro de eliminar este foro?');">
      <button type="submit" id="eliminar" >Eliminar</button>
    </form>
    </div>
  </div>
  </div>
{{/each}}



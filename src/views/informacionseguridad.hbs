    <!-- Formulario para agregar nueva información de seguridad -->
    <form action="/informacion-seguridad/crear" method="POST" class="crear-contenido">
        <br>
        <br>

        <div id="rectangle">
            <div class="barra">
            
                <h1 class="titulo">INFORMATE Y CREA</h1>
            </div>
            <br><br>
            <div class="barra-botones">
                <button class="boton">
        <span class="texto">CREA</span>
        <i class="fas fa-user icono icono-usuario"></i>
    </button>

    <button class="boton">
        <span class="texto">INFORMA</span>
        <i class="fas fa-circle-info icono icono-info"></i>
    </button>

    <button class="boton">
        <span class="texto">EDUCATE</span>
        <i class="fab fa-youtube icono icono-youtube"></i>
    </button>
            </div> <br>

            <div class="informacion-container">
                <label for="titulo" class="button-simulado">Título:</label>
                <input class="input-field" type="text" name="titulo" required>

                <label for="contenido" class="button-simulado">Contenido:</label>
                <select class="input-field" name="contenido" required>
                    <option value="imagen">Imagen</option>
                    <option value="video">Video</option>
                    <option value="link">Link</option>
                    <option value="documento">Documento</option>
                </select>

                <label for="imagenInput" class="button-simulado">Seleccionar archivo:</label>
                <br>
                <input class="input-field" type="file" id="imagenInput">

                <label for="fecha_publicacion" class="button-simulado">Fecha de Publicación:</label>
                <input class="input-field" type="datetime-local" name="fecha_publicacion" required>

                <label for="id_autor" class="button-simulado">ID del Autor:</label>
                <input class="input-field" type="number" name="id_autor" required>


                <br>
                <br>
                <!-- div para comentario -->
                <div class="contenedor-comentario">
                    <div class="cuadro-azul">
                        <div class="cuadro-blanco">
                            <textarea name="comentario" required>Dejanos  tu comentario...................:</textarea>
                        </div>

                        <!-- Boton principal de envio de datos -->
                        <button type="submit">Agregar Información de Seguridad</button>
                    </div>
                </div>

    </form>

    <div class="cuadro-independiente">
        {{#each informacionSeguridad}}
        <li>
            <strong>{{titulo}}</strong> - <br>-<br> {{contenido}} {{comentario}} {{fecha_publicacion}}
            {{id_autor}} {{id_informacion_seguridad}}

             <a href="/informacion-seguridad/editar/{{id}}" class="editar-link">Editar</a>
      
        </li>
        {{/each}}

    </div>
    </div>

    <div class="cuadro-gris">
        <a href="https://youtu.be/4cKb-8LxCrE?feature=shared" class="link-youtube" target="_blank">Enlace a YouTube</a>
    </div>
</body>


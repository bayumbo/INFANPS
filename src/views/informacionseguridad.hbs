<!-- views/informacionSeguridad.hbs -->

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Información de Seguridad</title>
</head>

<body>

    <h1>Gestión de Información de Seguridad</h1>

    <!-- Formulario para agregar nueva información de seguridad -->
    <form action="/informacion-seguridad" method="POST">
        <label for="titulo">Título:</label>
        <input type="text" name="titulo" required>
        <label for="contenido">Contenido:</label>
        <textarea name="contenido" required></textarea>
        <label for="fecha_publicacion">Fecha de Publicación:</label>
        <input type="datetime-local" name="fecha_publicacion" required>
        <label for="id_autor">ID del Autor:</label>
        <input type="number" name="id_autor" required>
        <!-- Puedes añadir más campos según sea necesario -->

        <button type="submit">Agregar Información de Seguridad</button>
    </form>

    <hr>

    <!-- Listado de información de seguridad existente -->
    <table>

        <tbody>
            {{#each informacionSeguridads}}
            <tr>
                <td>{{id}}</td>
                <td>{{titulo}}</td>
                <td>{{contenido}}</td>
                <td>{{fecha_publicacion}}</td>
                <td>{{id_autor}}</td>
                <td>
                    <a href="/informacion-seguridad/{{id}}">Ver Detalles</a>
                    <!-- Agrega más botones de acciones según tus necesidades -->
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>

</body>

</html>

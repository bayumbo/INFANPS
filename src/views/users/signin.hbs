<!DOCTYPE html>
<link rel="stylesheet" href="/css/estilos.css">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
<link rel="stylesheet"
    href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />
<link href='https://fonts.googleapis.com/css?family=Reem Kufi' rel='stylesheet'>
<link href='https://fonts.googleapis.com/css?family=Roboto' rel='stylesheet'>


<style>
    /*  CONTENEDOR PRICIPAL  */
    #contenedor {
        position: absolute;
        width: 100%;
        height: 100%;
        top: 0%;
        left: 0%;
        max-width: 100%;
        max-height: 100%;
        padding-left: 7%;
        padding-right: 7%;
        padding-top: 1%;
        padding-bottom: 1%;
        display: grid;
        grid-template-columns: 1fr 1fr;
    }

    #derecha {
        width: 105%;
        height: 90%;
        background-color: #E3EBFE;
        z-index: -1;

    }

    #izquierda {
        width: 50%;
        height: 100%;
    }


    /* CUADRO Y CONTENIDO DERECHO  */

    #text1 {
        text-align: center;
        margin-top: -40%;
        color: #000;
        text-align: center;
        font-family: 'Reem Kufi';
        font-si ze: 40px;
        font-style: normal;
        font-weight: 400;
        line-height: normal;
    }

    #icon {
        text-align: center;
    }

    #icon img {
       
        width: 25%;
        height: 15%;
        margin-top: 29.5%;
    }

    #text2 {
        text-align: center;
        margin-top: 5%;
        color: #000;
        text-align: center;
        font-family: 'Reem Kufi';
        font-size: 40px;
        font-style: normal;
        font-weight: 400;
        line-height: normal;
    }

    /*  CUADRO Y CONTENIDO IZQUIERDO  */

    
    #text3 h1 {
        text-align: center;
        font-size: 32px;
        margin-top: 10%;
        font-family: 'Roboto';
        font-weight: 700;
        opacity: 0.8;
        color: #153047;
    }

    #icon2 {
        text-align: center;
    }

    #icon2 img {
        width: 20%;
        height: 10%;
        margin-top: 10%;
    }


    /*  INPUTS  */
    #datos {
        margin-top: 7%;
    }

    #usuario {
        text-align: left;
        margin-left: 19%;
    }

    #clave {
        text-align: left;
        margin-left: 20%;
    }

    #usuario input {
        font-family: 'Roboto';
        font-weight: 700;
        position: absolute;
        background-color: transparent;
        border: none;
        border-bottom: 1px solid rgba(0, 0, 0, 0.755);
        outline: none;
        /* Elimina el resaltado al hacer clic */
        padding: 5px;
        width: 25%;

    }

    #clave input {
        font-family: 'Roboto';
        font-weight: 700;
        position: absolute;
        background-color: transparent;
        border: none;
        border-bottom: 1px solid rgba(0, 0, 0, 0.753);
        outline: none;
        /* Elimina el resaltado al hacer clic */
        padding: 5px;
        width: 25%;

    }

    /*   BOTONES   */

    #botones {
        margin-top: 17%;
        text-align: center;
    }

    #boton1 {
        text-align: center;
    }

    #boton1 button {
        position: absolute;
        font-family: 'Roboto';
        font-weight: 700;
        background-color: #88BBCC;
        /* Color celeste pastel */
        border: none;
        border-radius: 5%;
        color: rgb(39, 39, 39);
        /* Color del texto */
        width: 7%;
        height: 7%;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        cursor: pointer;
        border-radius: 10px;
        margin-left: -3.5%;
        margin-top: -5%;

    }

    #boton2 {
        text-align: center;
    }

    #boton2 a {
        position: absolute;
        font-family: 'Roboto';
        font-weight: 700;
        background-color: transparent;
        /* Fondo transparente */
        border: 2px solid #b0e0e6;
        /* Borde celeste pastel */
        width: 7%;
        height: 6%;
        border-radius: 10px;
        color: rgb(39, 39, 39);
        /* Color del texto */
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        cursor: pointer;
        margin-left: -3.5%;

    }


    /* ENLACE  */
    #text4 {
        position: absolute;
        font-family: 'Roboto';
        font-weight: 700;
        margin-left: 17%;
    }

    #text4 a {
        color: #153047;
        opacity: 0.8;
       
    }

    #enlace {
        position: absolute;
        font-family: 'Roboto';
        font-weight: 700;
        margin-left: 18.2%;
        margin-top: 0.5%;
    }

    #enlace a {
        color: #153047;
        opacity: 0.8;
    }




    /* Estilos responsivos */
    @media (max-width: 768px) {

        /* Contenedor principal */
        #contenedor {
            padding: 3%;
            grid-template-columns: 1fr;
        }

        /* Cuadro y contenido derecho */
        #derecha {
            height: auto;
            padding: 5%;
        }




        #text1 h1 {
            margin-top: -10%;
            font-size: 32px;
        }

        #icon img {
            margin-top: 5%;
        }

        #text2 h1 {
            margin-top: 10%;
            font-size: 30px;
        }

        /* Cuadro y contenido izquierdo */
        
       
        #text3 h1 {
            font-size: 24px;
            margin-top: 5%;
        }

        #icon2 img {
            width: 5%;
            height: auto;
        }

        

        /* Inputs */
        #datos {
            margin-top: 10%;
        }

        #usuario input,
        #clave input {
            width: 50%;
        }

        /* Botones */
        #botones {
            margin-top: 4%;
        }

        #boton1,
        #boton2 {
            width: 80%;
            text-align: center;
            margin-bottom: 15%;
        }

        #boton1 {
            display: flex;
            justify-content: center;/
        }

        #boton2 {
            display: flex;
            justify-content: center;
        }

        #boton1 button,
        #boton2 a {
            width: 50%;
            margin: 1% auto;
        }

        #text4 {
            margin-left: 25%;
            
        }
    }
</style>
<!--    CONTENEDOR PRINCIPAL   !-->
<div id="contenedor">
    <!--    CUADRO Y CONTENIDO DERECHO   !-->
    <div id="derecha">
        <br>
        <div id="text1">
            <h1></h1>
        </div>
        <br><br><br><br><br>
        <div id="icon">
            <img src="/img/logo2.png">
        </div>

        <br>
        <div id="text2">
            <h1>Infanps</h1>
            <h1>Bienvenidos</h1>
        </div>

    </div>

    <!--    CUADRO Y CONTENIDO IZQUIERDO     !-->
    <div id="izquierda">

        <div id="text3">
            <h1>Iniciar Sesion</h1>
            <div id="icon2">
                <img src="/img/usuario.png">
            </div>
        </div>


        <!--    INPUTS   !-->
        <form action="/users/signin" method="POST">
            <div id="datos">
                <div id="usuario">
                    <i class="fa fa-user-circle" aria-hidden="true"></i><input type="email" name="correo"
                        placeholder="Correo Electrónico">
                </div>

                <br><br>

                <div id="clave">
                    <i class="fa fa-unlock-alt" aria-hidden="true"></i><input type="password" name="contraseña"
                        placeholder="Contraseña">
                </div>
            </div>

            <!--    BOTONES      !-->
            <br><br><br><br>
            <div id="botones">
                <div id="boton1">
                    <button class="boton-celeste" href="/gestion-contenidos">Ingresar</button>
                </div>

                <div id="text4">
                    <a>¿Ya tienes cuenta?</a>
                </div>
                <br><br>
                <div id="enlace">
                    <a href="/users/signup">Registrarse</a>
                </div>
            </div>
        </form>
    </div>
</div>
</div>
</body>

</html>